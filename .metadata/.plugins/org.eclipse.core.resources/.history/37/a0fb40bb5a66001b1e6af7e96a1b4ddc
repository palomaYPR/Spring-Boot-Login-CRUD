 <div class="container">
  <br>
  <h2 th:if="${list.isEmpty()}">
No hay personas</h2>
<div th:if="${!list.isEmpty()}">
  <h2>
Mantenimiento de Personas</h2>
<br>
   <table class="table">
    <thead>
<tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>Editar</th>
      <th>Eliminar</th>
     </tr>
</thead>
    <tbody>
<tr th:each="persona : ${list}">
      <td th:text="${users.email}">
      <td th:text="${users.first_name}">
      <td th:text="${users.last_name}">
      
      <td><a class="btn btn-info" th:href="@{/save/{id}(id=${persona.id})}">Editar</a></td>
      <td><a class="btn btn-danger" th:href="@{/delete/{id}(id=${persona.id})}">Eliminar</a></td>
     </tr>
</tbody>
   </table>
